{
  "name": "beamly-freelance-marketplace",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "setup:db": "tsx src/scripts/setup-database.ts",
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "build:debug": "tsc && vite build --minify false",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules",
    "clean:cache": "rm -rf dist .firebase",
    "test:build": "npm run build && npm run preview",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore:rules,storage:rules",
    "emulators": "firebase emulators:start",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "emulators:import": "firebase emulators:start --import ./emulator-data",
    "logs": "firebase functions:log",
    "serve": "firebase serve",
    "analyze": "vite build --mode analyze",
    "check:env": "node -e \"console.log('Checking environment variables...'); Object.keys(process.env).filter(k => k.startsWith('VITE_')).forEach(k => console.log(k + ':', process.env[k] ? '✓ Set' : '✗ Missing'))\"",
    "prebuild": "npm run type-check",
    "postinstall": "npm run check:env",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@heroui/react": "^2.7.9",
    "@iconify/react": "^6.0.0",
    "@nextui-org/react": "^2.6.11",
    "@stripe/stripe-js": "^7.4.0",
    "@tanstack/react-query": "^5.80.7",
    "date-fns": "^3.0.6",
    "firebase": "^10.8.0",
    "framer-motion": "^12.23.0",
    "i18next": "^25.3.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-firebase-hooks": "^5.1.1",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^15.6.0",
    "react-router-dom": "^6.30.1",
    "recharts": "^2.10.3",
    "source-map-js": "^1.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/generator": "^7.27.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@babel/traverse": "^7.27.0",
    "@babel/types": "^7.27.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "firebase-tools": "^13.0.2",
    "postcss": "^8.4.49",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "tsx": "^4.7.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
